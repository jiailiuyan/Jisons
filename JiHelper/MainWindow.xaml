<Window x:Class="Jisons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Width="525"
        Height="350">
    <Grid>

        <TextBox Width="120"
                 Height="23"
                 Margin="179,180,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 DataContext="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                 Text="{Binding aa.Name}"
                 TextWrapping="Wrap" />
        <Button Width="75"
                Margin="299,267,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Button_Click"
                Content="Button" />

    </Grid>
</Window>
